@page "/tasks"

<h3>Tasks</h3>

@if (Tasks == null)
{
    <p>Loading...</p>
}
else
{
    <table class="table">
        <thead>
        <tr>
            <th></th>
            <th>Task</th>
            <th>Date Created</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var task in Tasks)
        {
            <tr>
                <td>@task.IsCompleted</td>
                <td>@task.Text</td>
                <td>@task.CreationDate.ToShortDateString()</td>
                <td>
                    <a class="btn btn-secondary">Update</a>
                    <a class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
        </tbody>
    </table>
}