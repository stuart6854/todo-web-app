@inherits LayoutComponentBase

<MudThemeProvider/>
<MudThemeProvider/>
<MudPopoverProvider/>
<MudDialogProvider/>
<MudSnackbarProvider/>

<MudLayout>
    <MudAppBar Elevation="1">
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@ToggleDrawer"/>
        <MudText Typo="Typo.h5" Class="ml-1">ToDo Web App</MudText>
        <MudSpacer/>
        <AuthorizeView>
            <Authorized>
                <p>Hello, @context.User.Identity?.Name!</p>
            </Authorized>
            <NotAuthorized>
                <MudLink Href="/login" Color="Color.Inherit">Login</MudLink>
            </NotAuthorized>
        </AuthorizeView>
    </MudAppBar>

    <MudDrawer @bind-Open="_drawerOpen" ClipMode="DrawerClipMode.Always" Elevation="1" Variant="DrawerVariant.Responsive">
        <NavMenu/>
    </MudDrawer>

    <MudMainContent Class="mt-4 px-4">
        @Body
    </MudMainContent>
</MudLayout>

<div id="blazor-error-ui">
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
    <a class="dismiss">🗙</a>
</div>

@code{
    bool _drawerOpen = true;

    void ToggleDrawer()
    {
        _drawerOpen = !_drawerOpen;
    }

}